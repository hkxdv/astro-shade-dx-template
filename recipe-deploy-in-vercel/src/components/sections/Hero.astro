---
import { Separator } from "@/ui/separator";
import { TranslatedText } from "@/components/TranslatedText";
import { Button } from "@/ui/button";
import type { SupportedLocale } from "@/contexts/LanguageContext";

// Obtener el idioma actual
const currentLang = Astro.currentLocale as SupportedLocale;
---

<header class="space-y-6 md:space-y-8 text-center animate-fadeIn">
  <h1
    class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent animate-gradientFlow"
  >
    <TranslatedText textKey="appName" client:load forcedLocale={currentLang} />
  </h1>

  <p
    class="text-muted-foreground text-lg md:text-xl max-w-3xl mx-auto animate-fadeInUp animation-delay-200"
  >
    <TranslatedText
      textKey="description"
      client:load
      forcedLocale={currentLang}
    />
  </p>

  <!-- Comando de instalaciÃ³n -->
  <div class="mt-8 mb-4 animate-fadeInUp animation-delay-250 max-w-3xl mx-auto">
    <div
      class="bg-card border rounded-lg p-4 md:p-6 shadow-sm hover:shadow-md transition-all duration-300"
    >
      <div class="flex items-center gap-2 mb-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-primary"
          ><path
            d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"
          ></path></svg
        >
        <h3 class="text-lg md:text-xl font-semibold">
          <TranslatedText
            textKey="sections.hero.createProject"
            client:load
            forcedLocale={currentLang}
          />
        </h3>
      </div>

      <div class="space-y-4">
        <div class="relative group">
          <div
            class="absolute right-2 top-2 opacity-0 group-hover:opacity-100 transition-opacity"
          >
            <button
              class="p-1.5 bg-primary/10 hover:bg-primary/20 rounded-md text-primary transition-colors"
              title="Copiar al portapapeles"
              onclick="navigator.clipboard.writeText('bunx @hkxdv/astro-shade-dx-template')"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><rect width="14" height="14" x="8" y="8" rx="2" ry="2"
                ></rect><path
                  d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"
                ></path></svg
              >
            </button>
          </div>
          <pre
            class="bg-muted p-4 rounded-md text-left overflow-x-auto font-mono border border-border/40"><code>bunx @hkxdv/astro-shade-dx-template</code></pre>
        </div>
      </div>

      <div class="mt-6">
        <p
          class="text-sm font-medium text-muted-foreground flex items-center gap-1 mb-3"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M8.8 20v-4.1l1.9.2a2.3 2.3 0 0 0 2.164-2.1V8.3A5.37 5.37 0 0 0 2 8.25c0 2.8.656 3.95 1 4.8a.2.2 0 0 1-.216.3L2 13.2v4.3a2.5 2.5 0 0 0 2.5 2.5z"
            ></path><path d="M19.3 17.7a2.5 2.5 0 0 1-2.5 2.5h-6.8"></path><path
              d="M19.3 13v-2.8a6 6 0 0 0-6-6h-.5"></path><path
              d="m15.3 8.1-3-3 3-3"></path></svg
          >
          <TranslatedText
            textKey="sections.hero.availableOptions"
            client:load
            forcedLocale={currentLang}
          />
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-left text-sm">
          <div
            class="bg-muted/50 p-3 rounded-lg border border-border/30 hover:border-primary/30 hover:bg-muted/70 transition-all"
          >
            <div class="flex items-center gap-1.5 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M17 18a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V9a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v9Z"
                ></path><path d="M20 7v12a2 2 0 0 1-2 2h-1"></path><path
                  d="M13 2v5"></path><path d="M9 2v5"></path></svg
              >
              <span class="font-mono text-primary font-semibold"> demo</span>
            </div>
            <span class="text-muted-foreground block pl-5"
              ><TranslatedText
                textKey="sections.hero.demoTemplate"
                client:load
                forcedLocale={currentLang}
              /></span
            >
          </div>
          <div
            class="bg-muted/50 p-3 rounded-lg border border-border/30 hover:border-primary/30 hover:bg-muted/70 transition-all"
          >
            <div class="flex items-center gap-1.5 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><rect width="18" height="18" x="3" y="3" rx="2"></rect><path
                  d="M7 7h10v2H7z"></path></svg
              >
              <span class="font-mono text-primary font-semibold">base</span>
            </div>
            <span class="text-muted-foreground block pl-5"
              ><TranslatedText
                textKey="sections.hero.baseTemplate"
                client:load
                forcedLocale={currentLang}
              /></span
            >
          </div>
          <div
            class="bg-muted/50 p-3 rounded-lg border border-border/30 hover:border-primary/30 hover:bg-muted/70 transition-all"
          >
            <div class="flex items-center gap-1.5 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"
                ></path><path d="m16 6-4-4-4 4"></path><path d="M12 2v13"
                ></path></svg
              >
              <span class="font-mono text-primary font-semibold">eslint</span>
            </div>
            <span class="text-muted-foreground block pl-5"
              ><TranslatedText
                textKey="sections.hero.eslintOption"
                client:load
                forcedLocale={currentLang}
              /></span
            >
          </div>
          <div
            class="bg-muted/50 p-3 rounded-lg border border-border/30 hover:border-primary/30 hover:bg-muted/70 transition-all"
          >
            <div class="flex items-center gap-1.5 mb-1">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M12 21.35a1.5 1.5 0 0 1-2.28-.95"></path><path
                  d="M9 13.55A3.84 3.84 0 0 1 5.25 9.5c0-.75.35-1.95.75-2.7C7.47 3.63 10 2 12 2s4.53 1.63 6 4.8c.4.75.75 1.95.75 2.7a3.84 3.84 0 0 1-3.75 4.05h-3.6Z"
                ></path><path d="M9.3 16.3a9.41 9.41 0 0 1-3-1.5"></path><path
                  d="M14.7 16.3a9.41 9.41 0 0 0 3-1.5"></path><path
                  d="M9.3 17.7a4.73 4.73 0 0 0 5.4 0"></path></svg
              >
              <span class="font-mono text-primary font-semibold">biome</span>
            </div>
            <span class="text-muted-foreground block pl-5"
              ><TranslatedText
                textKey="sections.hero.biomeOption"
                client:load
                forcedLocale={currentLang}
              /></span
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="flex flex-col sm:flex-row justify-center gap-4 pt-4 animate-fadeInUp animation-delay-300"
  >
    <Button variant="default" size="lg" className="gap-2 w-full sm:w-auto">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-github"
        ><path
          d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
        ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
      >
      <a
        href="https://github.com/hkxdv/astro-shade-dx-template"
        target="_blank"
        rel="noopener noreferrer"
        class="w-full"
      >
        GitHub
      </a>
    </Button>

    <Button variant="outline" size="lg" className="gap-2 w-full sm:w-auto">
      <svg
        width="16"
        height="16"
        viewBox="0 0 76 65"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="vercel-icon"
      >
        <path d="M37.5274 0L75.0548 65H0L37.5274 0Z" fill="currentColor"></path>
      </svg>
      <a href={`/${currentLang}/ssr-demo`} class="w-full"> Demo SSR</a>
    </Button>
  </div>

  <Separator
    client:load
    className="mt-6 animate-fadeInUp animation-delay-400"
  />
</header>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradientFlow {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
  }

  .animate-gradientFlow {
    background-size: 200% auto;
    animation: gradientFlow 8s ease infinite;
  }

  .animation-delay-100 {
    animation-delay: 0.1s;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-250 {
    animation-delay: 0.25s;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .vercel-icon {
    margin-right: 4px;
    transform: scale(1.1);
  }
</style>
