---
import { TechLogos } from "@/components/TechLogos";
---

<section class="space-y-6 animate-fadeIn animation-delay-100">
  <h2 class="text-2xl md:text-3xl font-bold text-center animate-fadeInUp animation-delay-200">
    Tecnolog√≠as Principales
  </h2>
  <div class="bg-muted/30 p-6 md:p-8 rounded-lg tech-logos-container animate-fadeInUp animation-delay-300">
    <TechLogos client:load />
  </div>
</section>

<style>
  .tech-logos-container {
    position: relative;
    border: 1px solid rgba(var(--border), 0.2);
    transition: transform 0.3s ease;
  }
  
  .tech-logos-container:hover {
    transform: scale(1.01);
  }
  
  @media (prefers-reduced-motion) {
    .tech-logos-container {
      transition: none;
    }
    
    .tech-logos-container:hover {
      transform: none;
    }
  }
</style> 